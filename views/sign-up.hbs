{{>navigation}}

<div class="auth-form">
  <h1>Sign Up</h1>
  <form action="/sign-up" method="post" class="needs-validation">

    <div class="form-group row">
      <div class="col">
        <label for="">Email</label>
        <input type="email" name="email" required class="form-control" placeholder="user@syb.com">
      </div>
    </div>

    <div class="form-group row">
      <div class="col">
        <label for="">Password</label>
        <input type="password" name="password" class="form-control">
      </div>
    </div>

    <button class="btn btn-primary">Sign up</button>
    <div class="alert alert-dark mt-3">Already have an account? <a href="/log-in">Login!</a></div>
  </form>
  {{#if errorMessage}}
<div class="alert alert-danger" role="alert">{{{errorMessage}}}</div>
{{/if}}
</div>

