<h1>WELCOME TO SYB</h1>
<hr>

<form action="/myboats/addboat" method="GET">       
  <button type="submit">ADD A BOAT</button>          
</form>
<hr>
  
<ul>
{{#each user.listings}}
    <li>Name: {{this.name}}</li>
    <li>Type: {{this.type}}</li>
    <li>Description: {{this.description}}</li>
    <li>Available to pick up from: {{this.locationAddress.street}}, 
                                   {{this.locationAddress.streetNumber}}, 
                                   {{this.locationAddress.city}}</li>
    <li><img src="{{this.imageURL}}" alt="image of boat"></li>
    <a href="/myboats/edit/{{this._id}}">EDIT BOAT</a>   
    
    <hr>

{{/each}}
</ul>