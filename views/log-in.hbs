  <header>
    <nav>
        <a href="/">Home</a>
    </nav>
  </header>

  <div class="container">
    <div class="auth-form">
      <h1>Login</h1>
      <form action="/log-in" method="POST" id="form" class="needs-validation">

      <div class="form-group row">
        <div class="col">
          <label for="exampleInput">Email</label>
          <input type="email" name="email" required class="form-control" placeholder="user@syb.com">
        </div>
      </div>

      <div class="form-group row">
          <div class="col">
            <label for="exampleInputPassword">Password</label>
            <input type="password" name="password" class="form-control">
          </div>
      </div>

      <button type="submit" class="btn btn-primary">Login</button>
      <p class="form-group">Don't have an account? <a href="/sign-up">Sign up!</a></p>
    <form>
  </div>
</div>



{{#if errorMessage}}
  <div class="alert alert-danger" role="alert">{{{errorMessage}}}</div>
{{/if}}