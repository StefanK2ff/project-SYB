<form action="/myboats/edit/{{listing._id}}" method="POST" enctype="multipart/form-data">
    <label for="">Boat name:</label>
    <input type="text" name="name" required value="{{listing.name}}">
    <br>
    <label for="">Type:</label>
    <input list="type_options" name="type" required value="{{listing.type}}">
    <datalist id="type_options">
        <option value="canoe">Canoe</option>
        <option value="kayak">Kayak</option>
        <option value="rowing">Rowing</option>
        <option value="inflatable">Inflatable</option>
        <option value="paddle">Paddle</option>
        <option value="boat">Boat</option>
    </datalist>
    <br>
    <label for="">Street:</label>
    <input type="text" name="street" required value="{{listing.locationAddress.street}}">
    <br>
    <label for="">Street Number:</label>
    <input type="text" name="streetNumber" required value="{{listing.locationAddress.streetNumber}}">
    <br>
    <label for="">City:</label>
    <input type="text" name="city" required value="{{listing.locationAddress.city}}">
    <br>
    <label for="">Province:</label>
    <input type="text" name="province" value="{{listing.locationAddress.province}}">
    <br>
    <label for="">Description:</label>
    <input type="text" name="description" value="{{listing.description}}">
    <br>
    <label for="">Max number of users:</label>
    <input type="number" name="forMaxNumOfUsers" defaul=1 required value="{{listing.forMaxNumOfUsers}}">
    <br>
    <label for="">Brand:</label>
    <input type="text" name="brand" value="{{listing.brand}}">
    <br>
    <label for="">Not available at:</label>
    <input type="text" name="notAvailableDates" placeholder="DD/MM/YYYY,DD/MM/YYYY" value="{{listing.notAvailableDates}}">
    <br>
    <label for="photo">Upload Photo (JPG or PNG format only):</label>
    <input type="file" name="photo" value="{{listing.imageURL}}">
    <br>
    <button type="submit">SAVE EDITS</button>
</form>

<form action="/myboats/delete/{{listing._id}}" method="POST">       
  <button type="submit">DELETE THIS LISTING</button>          
</form>

