
{{>navigation}}

 <div class="container">
   
{{!--HERO SECTION --}}
<div class="row">
  <div class="col-12 text-center" id="hero-section">
    <h1>Welcome to SYB</h1>
  </div>
</div>

<div class="alert alert-light text-justify" role="alert">
  This is a platform where you can build a community while you Share Your Boat.
</div>

{{!-- SELECT BOAT --}}
<form action="/" method="GET">
  <div class="row">
    <div class="col-6 form-group">
      <label for="type">Select Type</label>
      <select name="type" class="form-control" id="type-select">
        <option value=""> - ALL - </option>
        <option value="canoe">Canoe</option>
        <option value="kayak">Kayak</option>
        <option value="rowing">Rowing</option>
        <option value="inflatable">Inflatable</option>
        <option value="paddle">Paddle</option>
        <option value="boat">Boat</option>
      </select>
    </div>
    {{!-- SELECT DATE --}}
    <div class="col-6 form-group">
      <label for="start">Start date:</label>
      <input type="date" name="bookingStart" class="form-control" id="selected-date">
    </div>
    <hr>
  </div>
  {{!-- BUTTON FOR SUBMIT SEARCH --}}
  <div class="row">
    <div class="col-12 text-center">
      <button type="submit" class="btn cta-top btn-block" id="submitFilter">Search for SYBs</button>
    </div>
  </div>
</form>


{{!-- LISTINGS --}}
<div class="row">
  {{#each data}}
  <div class="col-s-12 col-md-6 text-center">
    <div class="card result-card mt-3">
      <img src="{{this.imageURL}}" class="card-img-top backup mt-3" alt="Image of {{this.name}}">
      <h5 class="card-title mt-3">{{this.name}}</h5>
      <h6 class="card-subtitle mb-2 mt-3 text-muted">{{this.brand}}</h6>
      <p class="card-text mt-3 pl-2 pr-2">{{this.type}} for {{this.forMaxNumOfUsers}} user(s). Pickup near
        {{this.locationAddress.street}}, {{this.locationAddress.city}}.</p>
      <form action="/bookings/request/{{this._id}}" method="POST" name="requestForm" id="{{this._id}}">
        <button type="submit" name="request" class="btn cta-bottom mt-3 mb-3" id="{{this._id}}">Request booking</button>
      </form>
      <!-- <a href="#" class="card-link">Add to favorites (soon)</a> -->
    </div>
  </div>
  {{/each}}
</div>

 </div>

<script src="/javascripts/helper.js"></script>